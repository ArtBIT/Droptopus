#!/usr/bin/env bash

# remember the calling directory path
pushd . >/dev/null

# change directory to the app directory
READLINK=greadlink
type $GREADLINK >/dev/null 2>&1 || READLINK=readlink
DIR="$( cd "$( dirname "$( $READLINK -f "${BASH_SOURCE[0]}" )" )" && pwd )"
cd $DIR/..

# If the virtual environment has not yet been initialized
if [[ ! -d env ]]; then
    virtualenv -p python3 env && source env/bin/activate && pip3 install -r requirements.txt
fi

# activate virtual environment
source ./env/bin/activate

# start the app in the background
python3 -m droptopus.main &

# go back to the calling directory
popd >/dev/null
