#!/usr/bin/env bash

# remember the calling directory path
pushd . >/dev/null

# change directory to the app directory
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $DIR/..

# If the virtual environment has not yet been initialized
if [[ ! -d .env ]]; then
    virtualenv --no-site-packages .env && source .env/bin/activate && pip install -r env.requirements.txt
fi

# activate virtual environment
source ./.env/bin/activate

# start the app in the background
python ./droptopus/main.py &

# go back to the calling directory
popd >/dev/null
